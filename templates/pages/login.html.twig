{% extends 'base.html.twig' %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <div style="text-align: center;">
            <h1>Login</h1>

            {% if error %}
                <div style="color: red; text-align: center;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('security_login_submit') }}" method="post">
                <label for="username" style="color: white;">Email</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
                <br>
                <label for="password" style="color: white;">Password</label>
                <input type="password" id="password" name="_password" required>
                <br>
                <button type="submit">Login</button>
            </form>

            <div>
                <a href="{{ path('app_register') }}" style="color: white;">Go to Register</a>
            </div>
        </div>
    </div>
{% endblock %}
