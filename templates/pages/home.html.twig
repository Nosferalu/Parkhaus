{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col">
        <div class="wrapper">
        <div class="sign">
            <h1><span class="fast-flicker">Wel</span>come<span class="flicker"> to </span>Carpark !</h1>
        </div>
            <div class="container">
                <i class="fas fa-smile-beam"></i>
                <span class="num" data-val="340">000</span>
                <span class="text">Current Free Spots</span>
            </div>
            <button class='glowing-btn'><span class='glowing-txt'>CH<span class='faulty-letter'>ECK</span> IN</span>
            </button>
            <button class='glowing-btn'><span class='glowing-txt'>CH<span class='faulty-letter'>ECK</span> OUT</span>
            </button>
        </div>
        <div>
        </div>
    </div>
    <script>
        let valueDisplays = document.querySelectorAll(".num");
        let interval = 400;

        valueDisplays.forEach((valueDisplay) => {
            let startValue = 0;
            let endValue = parseInt(valueDisplay.getAttribute("data-val"));
            let duration = Math.floor(interval / endValue);
            let counter = setInterval(function () {
                startValue += 1;
                valueDisplay.textContent = startValue;
                if (startValue == endValue) {
                    clearInterval(counter);
                }
            }, duration);
        });
    </script>
{% endblock %}

